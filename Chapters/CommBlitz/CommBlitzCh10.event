ALIGN 4
scCountFleetKill: {
	SetSymbol(end, 0)

	ENUF flagFleetKill

	/* reminder that COUNTER_ADD is broken */
	COUNTER_ADD cntFleetKillCount 0

	COUNTER_CHECK cntFleetKillCount

	SVAL r1 (FleetCount)
	BNE end rC r1

	ENUT 3 /* important! otherwise no turn count at the end of the game */
	CALL scEnding

LABEL end
	NoFade
	ENDA
}

